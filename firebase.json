{
  "hosting": [
    {
      "target": "main-site",
      "public": "dist",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ],
      "headers": [
        {
          "source": "**",
          "headers": [
            {
              "key": "Access-Control-Allow-Origin",
              "value": "*"
            }
          ]
        }
      ]
    },
    {
      "target": "hazards-subdomain",
      "public": "dist",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "redirects": [
        {
          "source": "**",
          "destination": "https://maps.geology.utah.gov/hazards",
          "type": 302
        }
      ]
    },
    {
      "target": "ccus-subdomain",
      "public": "dist",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "redirects": [
        {
          "source": "**",
          "destination": "https://maps.geology.utah.gov/ccus",
          "type": 302
        }
      ]
    },
    {
      "target": "minerals-subdomain",
      "public": "dist",
      "ignore": [
        "firebase.json",
        "**/.*",
       "**/node_modules/**"
     ],
     "redirects": [
       {
         "source": "**",
         "destination": "https://maps.geology.utah.gov/minerals",
         "type": 302
       }
     ]
   },
   {
     "target": "wetlands-subdomain",
     "public": "dist",
     "ignore": [
       "firebase.json",
       "**/.*",
       "**/node_modules/**"
     ],
     "redirects": [
       {
         "source": "**",
         "destination": "https://maps.geology.utah.gov/wetlands",
         "type": 302
       }
     ]
   }
 ],
 "functions": [
   {
     "source": "functions",
     "codebase": "default",
     "ignore": [
       "node_modules",
       ".git",
       "firebase-debug.log",
       "firebase-debug.*.log",
       "*.local"
     ],
     "predeploy": [
       "npm --prefix \"$RESOURCE_DIR\" run lint",
       "npm --prefix \"$RESOURCE_DIR\" run build"
     ]
   }
 ]
}

