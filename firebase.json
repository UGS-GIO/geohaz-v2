{
  "hosting": [
    {
      "target": "main-site",
      "public": "dist",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "hazards-subdomain",
      "public": "dist",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "redirects": [
        {
          "source": "**",
          "destination": "https://maps.geology.utah.gov/hazards",
          "type": 301
        }
      ]
    },
    {
      "target": "ccus-subdomain",
      "public": "dist",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "redirects": [
        {
          "source": "**",
          "destination": "https://maps.geology.utah.gov/ccus",
          "type": 301
        }
      ]
    },
    {
      "target": "minerals-subdomain",
      "public": "dist",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "redirects": [
        {
          "source": "**",
          "destination": "https://maps.geology.utah.gov/minerals",
          "type": 301
        }
      ]
    }
  ]
}
